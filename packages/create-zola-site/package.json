{
  "name": "create-zola-site",
  "version": "0.0.1",
  "description": "Create Zola-based websites with one command",
  "repository": {
    "type": "git",
    "url": "https://github.com/U-C-S/zola-tools",
    "directory": "packages/create-zola-site"
  },
  "author": "U-C-S",
  "license": "MIT",
  "bin": {
    "create-zola-site": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
