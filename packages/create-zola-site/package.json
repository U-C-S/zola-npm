    "prompts": "2.4.2",
    "rimraf": "3.0.2",
    "update-check": "1.5.4"
  },
  "engines": {
    "node": ">=14.18.0"
  },
  "keywords": [
    "zola",
    "tera",
    "static-site-generator",
    "ssg",
    "markdown",
