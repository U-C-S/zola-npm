{
	"name": "zola-npm",
	"private": true,
	"workspaces": [
		"packages/zola-bin",
		"packages/create-zola-site"
	],
	"scripts": {
		"artifacts": "napi artifacts",
		"setup": "node utils/setup.mjs",
		"build": "napi build --platform --release --manifest-path ./zola/Cargo.toml --dts packages/zola-bin/bindings.d.ts --js packages/zola-bin/bindings.js --js-package-name @u-c-s/zola -o ./",
		"build:debug": "node utils/build.mjs",
		"universal": "napi universalize",
		"test:npm-i": "sh ./examples/test_install.sh",
		"test:czs": "sh ./examples/test_czs.sh"
	},
	"devDependencies": {
		"@napi-rs/cli": "^3.5.1",
		"@types/node": "^25.0.9",
		"smol-toml": "^1.6.0"
	},
	"engines": {
		"node": ">= 20"
	},
	"napi": {
		"binaryName": "zola-bin",
		"targets": [
			"aarch64-apple-darwin",
			"x86_64-apple-darwin",
			"x86_64-pc-windows-msvc",
			"x86_64-unknown-linux-gnu"
		]
	},
	"prettier": {
		"trailingComma": "es5",
		"tabWidth": 2,
		"useTabs": true,
		"printWidth": 110
	}
}
