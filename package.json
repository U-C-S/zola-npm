{
	"name": "zola-bin",
	"version": "0.4.0-preview.1",
	"author": "U-C-S",
	"license": "MIT",
	"description": "Zola, A Static Site Generator, as a NPM Package",
	"homepage": "https://github.com/U-C-S/zola-npm",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/U-C-S/zola-npm.git"
	},
	"bin": {
		"zola-bin": "bin/zola.js"
	},
	"main": "dist/main.js",
	"types": "types/main.d.ts",
	"files": [
		"bin",
		"dist",
		"types",
		"bindings.js",
		"bindings.d.ts",
		"CHANGELOG.md"
	],
	"scripts": {
		"artifacts": "napi artifacts",
		"build": "node setup.mjs && napi build --platform --release --cargo-cwd \"zola\" --dts bindings.d.ts --js bindings.js",
		"build:debug": "node setup.mjs && napi build --platform --cargo-cwd \"zola\" --dts bindings.d.ts --js bindings.js",
		"universal": "napi universal",
		"prepare": "tsc",
		"Test_npm_install": "sh ./examples/test_install.sh",
		"Test_CZS": "sh ./examples/test_czs.sh"
	},
	"devDependencies": {
		"@napi-rs/cli": "^2.18.4",
		"@types/node": "^22.13.1",
		"smol-toml": "^1.3.1",
		"typescript": "^5.7.3"
	},
	"engines": {
		"node": ">= 20"
	},
	"napi": {
		"name": "zola-bin"
	},
	"prettier": {
		"trailingComma": "es5",
		"tabWidth": 2,
		"useTabs": true,
		"printWidth": 110
	},
	"keywords": [
		"zola",
		"tera",
		"static-site-generator",
		"ssg",
		"markdown",
		"rust",
		"html",
		"scss",
		"sass",
		"bin",
		"cli",
		"front-end",
		"framework"
	],
	"optionalDependencies": {
		"zola-bin-darwin-x64": "0.17.5-preview.1",
		"zola-bin-linux-x64-gnu": "0.17.5-preview.1",
		"zola-bin-win32-x64-msvc": "0.17.5-preview.1"
	},
	"directories": {
		"example": "examples",
		"lib": "lib"
	},
	"bugs": {
		"url": "https://github.com/U-C-S/zola-npm/issues"
	}
}
